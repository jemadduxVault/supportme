<div class="container" id="home">
  <div class="row-fluid">
    <div class="span8">
      <h1 id="home-header">
        SupportMe
      </h1>

      <p id="home-leader">
        The best way to provide live support to your customers in your website.
      </p>

      <p class="home-action">
        <a href="#signup-form" role="button" data-toggle="modal">Sign up</a> or <%= link_to "Try our demo", create_demo_path, method: :post %>
      </p>

      <%= render partial: "modal", locals: { user: @user } %>
    </div>

    <div class="span3" id="login-form">
      <%= render "login_form" %>
    </div>
  </div>
</div>
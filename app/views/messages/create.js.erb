<% publish_to admin_chat_path(@chat) do %>
  $("#chat").append("<%= escape_javascript render @message %>");
  $("#new_message")[0].reset();
<% end %>


<% publish_to admin_chat_path(@chat) do %>
  $("#chat").append("<%= escape_javascript render partial: 'admin/chats/message', collection: @messages %>");
  $("#new_message")[0].reset();
  $("body").scrollTop( $("body")[0].scrollHeight );
<% end %>
